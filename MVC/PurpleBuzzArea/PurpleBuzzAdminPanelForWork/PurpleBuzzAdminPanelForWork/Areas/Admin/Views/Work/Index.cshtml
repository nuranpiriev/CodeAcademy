@model IEnumerable<Work>;

    <a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Work" asp-action="Create">Create</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Work item in Model){
        <tr>
           
            
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><img src="~/assets/img/@item.MainPageUrl" width="55" /></td>
                <td><a class = "btn btn-primary"</a>Update</td> 
                    <td><a class = "btn btn-danger" asp-area="Admin" asp-controller="Work" asp-action="Delete" asp-route-id ="@item.Id"></a>Delete</td>
               
            
        </tr>
        }
    </tbody>
</table>