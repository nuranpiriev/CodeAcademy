@model IEnumerable<OurService>


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Services</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <a class=" btn btn-success  mb-3 mt-3" asp-area="Admin" asp-controller="ServiceAdmin" asp-action="Create">Create</a>

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Update</th>
                            <th>Delete</th>
                            
                            
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach(OurService item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td> <img src="~/img/@item.ImgUrl" width="80" alt="img error"/></td>
                                <td> <a class="btn btn-success" asp-area="Admin" asp-controller="ServiceAdmin" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td> <a class="btn btn-danger" asp-area="Admin" asp-controller="ServiceAdmin" asp-action="Delete" asp-route-Id="@item.Id">Delete</a></td>
                            </tr>
                        }

                      
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->